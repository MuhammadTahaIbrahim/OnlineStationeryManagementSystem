<div class="page-wrapper">
    <div class="content container-fluid">

        <div class="page-header">
            <div class="row">
                <div class="col">
                    <h3 class="page-title">Retailer Table</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Wholesaler" asp-action="Index">Dashboard</a></li>
                        <li class="breadcrumb-item active">Retailer List</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Retailer List</h4>
                        @*  <h6>Manage your User</h6> *@
                        @*   <p class="card-text">
                        This is the most basic example of the datatables with zero configuration. Use the <code>.datatable</code> class to initialize datatables.
                        </p> *@
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table  datanew ">
                                <thead>
                                    <tr>

                                        <th>Retailer ID </th>
                                        <th>Retailer name </th>
                                        <th>Retailer email </th>

                                        <th>Password</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in ViewBag.wslist)
                                    {


                                        <tr>

                                            <td>@item.UserId</td>
                                            <td>@item.UserName </td>
                                            <td>@item.UserEmail</td>

                                            <td>@item.UserPass</td>

                                            @* <td><span class="bg-lightred badges">@item.UserStatus</span></td> *@
                                            <td>
                                                @if (item.UserStatus == "Active")
                                                {
                                                    <a class="bg-lightgreen badges text-light" asp-controller="Wholesaler" asp-action="uprs" asp-route-id="@item.UserId" asp-route-upd="Active">
                                                        Activate
                                                    </a>
                                                }
                                                else
                                                {

                                                    <a class="bg-lightred badges text-light" asp-controller="Wholesaler" asp-action="uprs" asp-route-id="@item.UserId" asp-route-upd="Inactive">
                                                        Deactivate
                                                    </a>
                                                }
                                            </td>
                                            <td>
                                                <a class="me-3" asp-controller="Home" asp-action="upws" asp-route-id="@item.UserId">
                                                    <img src="~/admin/assets/img/icons/edit.svg" alt="img">
                                                </a>
                                                <a class="me-3 confirm-text" asp-controller="Home" asp-action="delws" asp-route-id="@item.UserId">
                                                    <img src="~/admin/assets/img/icons/delete.svg" alt="img">
                                                </a>
                                                <script>
                                                    function confirmDelete(userId) {
                                                        if (confirm('Are you sure you want to delete this wholesaler?')) {
                                                            window.location.href = '/Home/DelWS?id=' + userId;
                                                        }
                                                    }
                                                </script>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
