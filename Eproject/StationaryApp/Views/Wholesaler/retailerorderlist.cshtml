@model IEnumerable<Retailerorderlist>;

@{
    Layout = "_WholesalerLayout";
}

<div class="page-wrapper">
    <div class="content container-fluid">

        <div class="page-header">
            <div class="row">
                <div class="col">
                    <h3 class="page-title">Retailer Order List</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Wholesaler" asp-action="Index">Dashboard</a></li>
                        @* <li class="breadcrumb-item active">Wholesalers Order List</li> *@
                    </ul>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        @* <h4>wholesaler order List</h4> *@
                        @*  <h6>Manage your User</h6> *@
                        @*   <p class="card-text">
                        This is the most basic example of the datatables with zero configuration. Use the <code>.datatable</code> class to initialize datatables.
                        </p> *@
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table  datanew ">
                                <thead>
                                    <tr>

                                        <th>#</th>
                                        <th>Email</th>
                                        <th>Product Name</th>
                                        <th>Product Desc</th>

                                        <th>Category Name</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total Price</th>
                                        <th>Image</th>

                                        <th>Update Status</th>
                                        @*  <th>Action</th> *@
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in ViewBag.rolist)
                                    {


                                        <tr>

                                            <td>@item.RorderId</td>
                                            <td>@item.Retaileremail </td>
                                            <td>@item.ProName</td>
                                            <td>@item.ProDesc</td>
                                            <td>@item.Catename</td>
                                            <td>@item.ProPrice</td>
                                            <td>@item.Rproqty</td>
                                            <td>@item.Rtotalprice</td>
                                            <td><img src="~/upl_images/@item.ProImg" width="80" /></td>

                                            @* <td><span class="bg-lightred badges">@item.UserStatus</span></td> *@
                                            <td>
                                                @if (item.Rstatus == "Approved")
                                                {
                                                    <a class="bg-lightgreen badges text-light" asp-controller="Wholesaler" asp-action="upwstatus" asp-route-id="@item.RorderId" asp-route-upd="Approved">
                                                        Approved
                                                    </a>
                                                }
                                                else if (item.Rstatus == "Delivered")
                                                {
                                                    <a class="bg-warning badges text-light" asp-controller="Wholesaler" asp-action="upwstatus" asp-route-id="@item.RorderId" asp-route-upd="Delivered">
                                                        Delivered
                                                    </a>
                                                }
                                                else if (item.Rstatus == "Rejected")
                                                {
                                                    <a class="bg-info badges text-light" asp-controller="Wholesaler" asp-action="uprstatus" asp-route-id="@item.RorderId" asp-route-upd="Rejected">
                                                        Rejected
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a class="bg-lightred badges text-light" asp-controller="Wholesaler" asp-action="uprstatus" asp-route-id="@item.RorderId" asp-route-upd="Pending">
                                                        Pending
                                                    </a>
                                                }

                                            </td>

                                            @*       @if (item.UserStatus == "Active")
                                        {
                                        <a class="bg-lightgreen badges text-light" asp-controller="Home" asp-action="upws" asp-route-id="@item.UserId" asp-route-upd="Active">
                                        Activate
                                        </a>
                                        }
                                        else
                                        {

                                        <a class="bg-lightred badges text-light" asp-controller="Home" asp-action="upws" asp-route-id="@item.UserId" asp-route-upd="Inactive">
                                        Deactivate
                                        </a>
                                        } *@

                                            @*   <td>
                                        <a class="me-3" asp-controller="Home" asp-action="upws" asp-route-id="@item.UserId">
                                        <img src="~/admin/assets/img/icons/edit.svg" alt="img">
                                        </a>
                                        <a class="me-3 confirm-text" asp-controller="Home" asp-action="delws" asp-route-id="@item.UserId">
                                        <img src="~/admin/assets/img/icons/delete.svg" alt="img">
                                        </a>
                                        <script>
                                        function confirmDelete(userId) {
                                        if (confirm('Are you sure you want to delete this wholesaler?')) {
                                        window.location.href = '/Home/DelWS?id=' + userId;
                                        }
                                        }
                                        </script>
                                        </td> *@
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



