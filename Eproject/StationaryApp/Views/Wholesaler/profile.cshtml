@model Regwholesaler
@{
    Layout = "_WholesalerLayout";
}
<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Profile</h4>
                <h6>User Profile</h6>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="profile-set">
@*                     <div class="profile-head">
                    </div> *@
                    <div class="profile-top">
                        <div class="profile-content">
                            <div class="profile-contentname">
                                <h2>@Model.UserName</h2>
                                <h4>Update Your Password</h4>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Show message if available -->
                @if (TempData["msg1"] != null)
                {
                    <div class="alert alert-info">@TempData["msg1"]</div>
                }

                <form method="post">
                    <div class="row">
                        <div class="col-lg-6 col-sm-12">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" value="@Model.UserName" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="col-lg-6 col-sm-12">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" value="@Model.UserEmail" class="form-control" readonly />
                            </div>
                        </div>

                        <!-- Display Old Password (Read-Only) -->
                        <div class="form-group">
                            <label>Old Password</label>
                            <div class="pass-group">
                                <input type="text" value="@Model.UserPass" class="form-control" readonly />
                            </div>
                        </div>

                        <!-- Input for New Password -->
                        <div class="form-group">
                            <label>New Password</label>
                            <div class="pass-group">
                                <input type="password" name="NewPassword" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-submit me-2">Change Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
