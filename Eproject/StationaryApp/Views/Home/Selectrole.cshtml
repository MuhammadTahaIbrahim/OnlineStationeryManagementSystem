@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <meta name="description" content="POS - Bootstrap Admin Template">
    <meta name="keywords" content="admin, estimates, bootstrap, business, corporate, creative, management, minimal, modern, html5, responsive">
    <meta name="author" content="Dreamguys - Bootstrap Admin Template">
    <meta name="robots" content="noindex, nofollow">
    <title>Login Portal - Stationary Management System</title>

    <link rel="shortcut icon" type="image/x-icon" href="~/admin/assets/img/favicon.jpg">

    <link rel="stylesheet" href="~/admin/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/admin/assets/css/animate.css">
    <link rel="stylesheet" href="~/admin/assets/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/admin/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/admin/assets/plugins/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/admin/assets/css/style.css">
</head>
<body class="error-page">
    <div id="global-loader">
        <div class="whirly-loader"></div>
    </div>
@*     <div class="container">
        <div class="row">
            <div class="col-md-12">
             
            </div>
        </div>
    </div> *@
    <div class="main-wrapper">
        <div class="error-box">
            <h2 style="font-size: 50px; color:  #ff9f43;">Online Stationary Managment System</h2>
            @* <h2 style="font-size: 60px; color: #ff9f43;">Access Panel</h2> *@
            <h3 class="h2 mb-3">User Role Selector</h3>
            <p class="h4 font-weight-normal">Please select your role to proceed</p>

            <div class="row">
                <!-- Admin Button -->
                <div class="col-md-4 mb-3">
                    <a class="btn btn-primary btn-lg btn-block" asp-controller="Home" asp-action="Signin">
                        Admin
                    </a>
                </div>
                <!-- Wholesaler Button -->
                <div class="col-md-4 mb-3">
                    <a class="btn btn-success btn-lg btn-block" asp-controller="Wholesaler" asp-action="Signin">
                        Wholesaler
                    </a>
                </div>
                <!-- Retailer Button -->
                <div class="col-md-4 mb-3">
                    <a class="btn btn-info btn-lg btn-block" asp-controller="Retailer" asp-action="Signin">
                        Retailer
                    </a>
                </div>
            </div>

         @*    @if (ViewBag.msg != null)
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @ViewBag.msg
                </div>
            } *@
        </div>
    </div>

    <script src="~/admin/assets/js/jquery-3.6.0.min.js"></script>
    <script src="~/admin/assets/js/feather.min.js"></script>
    <script src="~/admin/assets/js/jquery.slimscroll.min.js"></script>
    <script src="~/admin/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/assets/js/script.js"></script>
</body>
</html>
